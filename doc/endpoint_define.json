          "actionMappings": [
            {
              "@type": "ActionsToDirective",
              "actions": ["open {endpoint}"],
              "directive": {
                "name": "openWash",
                "payload": {}
              }
            }
          ],
          "stateMappings": [
            {
              "@type": "StatesToValue",
              "states": ["is {endpoint} open"],
              "value": "IS_OPEN"
            },
            {
              "@type": "StatesToRange",
              "states": [ "state1", "state2" ],
              "range": {
                "minimumValue": 0,
                "maximumValue": 100
              }
            }
          ]
        }
      }
