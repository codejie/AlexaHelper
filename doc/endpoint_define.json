            },
            {
              "value": "mode-2",
              "modeResources": {
                "friendlyNames": [
                  {
                    "@type": "text",
                    "value": {
                      "text": "mode2",
                      "locale": "en-US"
                    }
                  },
                  {
                    "@type": "text",
                    "value": {
                      "text": "模式2",
                      "locale": "hz-CN"
                    }
                  }
                ]
              }
            }
          ]
        },
        "capabilityResources": {
          "friendlyNames": [
            {
              "@type": "asset",
